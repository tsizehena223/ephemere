<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        #showPopup2 {
            color: white;
            cursor: pointer;
        }

        #popup2 {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(255, 255, 255, 0.9); /* Fond semi-transparent */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            padding: 20px;
            z-index: 1000;
            border-radius: 10px;
            overflow: hidden;
        }

        .form1 {
            padding: 20px;
        }

        .label1 {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .input1 {
            width: calc(100% - 16px);
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        .input1:focus {
            outline: none;
            border-color: #3498db;
        }

        .button1 {
            background-color: #3498db;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        .button1:hover {
            background-color: #2980b9;
        }

        #closePopup2 {
            background-color: #e74c3c;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        #closePopup2:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>

    <p id="showPopup2">Post</p>

    <div id="popup2" class="popup">
        {% if app.user %}
            <form action="{{ path('article.create') }}" method="POST" class="form1" enctype="multipart/form-data">
                <label for="name" class="label1">Nom :</label>
                <input type="text" class="input1" id="name" name="name" required value="{{ app.user.name }}" readonly>

                <label for="title" class="label1">Titre :</label>
                <input type="text" class="input1" id="title" name="title" required placeholder="Titre du projet">

                <label for="travail" class="label1">Situation de travail :</label>
                <input type="text" class="input1" id="travail" name="travail" required placeholder="Situation du projet">

                <label for="activite" class="label1">Domaine d'activité :</label>
                <select class="input1" id="activite" name="activite" required>
                    <option value="aea">AEA (Agriculture, Elevage, Agro)</option>
                    <option value="tec">TEC (Tech, Education, Construction)</option>
                    <option value="htra">HTRA (Hôtellerie, Tourisme, Restauration, Agence de voyage)</option>
                    <option value="finance">Finance</option>
                </select>

                <label for="projectFile" class="label1">Project file :</label>
                <input type="file" id="projectFile" class="input1" name="projectFile" required>

                <button type="submit" class="button1">Post</button>
            </form>
        {% endif %}
        <button id="closePopup2">Close</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var showPopupButton = document.getElementById('showPopup2');
            var popup = document.getElementById('popup2');
            var closePopupButton = document.getElementById('closePopup2');

            showPopupButton.addEventListener('click', function () {
                popup.style.display = 'block';
            });

            closePopupButton.addEventListener('click', function () {
                popup.style.display = 'none';
            });
        });
    </script>
</body>
</html>
