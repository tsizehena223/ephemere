{# {% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %} #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/login/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/login/css/fontawesome.min.css') }}">
    <title>Welcom to In-Ceo Tech Madagascar</title>
</head>
<body>
    <div class="container">
        
        <div class="form-container">
            <div class="signin-signup">         
                <form action="{{ path('app_login') }}" class="sign-in-form" method="POST">
                    <h2 class="title">Sign In</h2>
                    {% if error %}
                        <div style="color: red">{{ error }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <div class="input-field">
                        <i class="fa-solid fa-1x fa-envelope"></i>
                        <input type="email" placeholder="E-mail" name="email" required>
                    </div>
                    <div class="input-field">
                        <i class="fa-solid fa-1x fa-lock"></i>
                        <input type="password" name="password" id="check-password" placeholder="Password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="submit" value="Login" class="btn solid">
                    <p class="social-text">Follow us with social platforms</p>
                    <div class="social-media">
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-facebook"></i>
                        </a>
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-twitter"></i>
                        </a>
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-instagram"></i>
                        </a>
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-google"></i>
                        </a>
                    </div>
                </form>

                <form action="{{ path('app_register') }}" class="sign-up-form" method="POST">
                    <h2 class="title">Register</h2>
                    <div class="input-field">
                        <i class="fa-solid fa-1x fa-user"></i>
                        <input type="text" name="name" placeholder="Username" required>
                    </div>
                    <div class="input-field">
                        <i class="fa-solid fa-1x fa-envelope"></i>
                        <input type="email" name="email" placeholder="E-mail" required>
                    </div>
                    <div class="input-field">
                        <i class="fa-solid fa-1x fa-lock"></i>
                        <input type="password" name="password" id="check2-password" placeholder="Password" required>
                    </div>
                    <input type="submit" value="Sign Up" class="btn solid">
                    <p class="social-text">Follow us with social platforms</p>
                    <div class="social-media">
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-facebook"></i>
                        </a>
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-twitter"></i>
                        </a>
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-instagram"></i>
                        </a>
                        <a href="" class="social-icon">
                            <i class="fa-fa-lg fa-brands fa-google"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusamus, deserunt qui, delenit</p>
                    <button class="btn transparent" id="sign-up-btn">Sign Up</button>
                </div>
                <img src="{{ asset('assets/login/images/undraw_collaboration_re_vyau.svg') }}" class="image" alt="">
            </div>

            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusamus, deserunt qui, delenit</p>
