{% extends 'base.html.twig' %}

{% block title %}Add information{% endblock %}

{% block body %}
<div style="display: flex; align-items: center; justify-content: center;">
    <div style="background-color: #fff; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); padding: 24px; width: 25rem; height: 64vh; margin-top: 4rem;">
        <h2 style="margin: 0 0 16px; text-align: center; font-size: 1.5rem; font-weight: 600;">Add information</h2>
        {% if app.session.flashbag.has("error") or app.session.flashbag.has("success") %}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div style="text-align: center; margin: 16px 0; padding: 8px; border-radius: 4px; border: 1px solid #2b8613; background-color: #4caf50; color: #fff;">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div style="text-align: center; margin: 16px 0; padding: 8px; border-radius: 4px; border: 1px solid #ff0000; background-color: #ff4545; color: #fff;">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% endif %}
        {% if app.user %}
            <div style="text-align: center; margin: 16px 0; padding: 8px; color: #888;">
                Your are logged in as {{ app.user.name }}, <a href="{{ path('app_logout') }}" style="color: #ff0000;">Se déconnecter ?</a>
            </div>
        {% endif %}
        {% if error %}
            <div style="text-align: center; margin: 16px 0; padding: 8px; border-radius: 4px; border: 1px solid #ff0000; background-color: #ff4545; color: #fff;">
                {{ error }}
            </div>
        {% endif %}
        <form action="{{ path('app_add_information') }}" method="POST">
            <div style="margin: 16px 0;">
                <label for="profil" style="font-weight: 600;">Profil : </label>
                <select name="profil" id="profil" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; background-color: #EDF2F4;" required>
                    <option value="etudiant">Etudiant</option>
                    <option value="professeur">Professeur</option>
                    <option value="investisseur">Investisseur</option>
                    <option value="entreprise">Entreprise</option>
                </select>
            </div>
            <div style="margin: 16px 0;">
                <label for="cin" style="display: block; margin: 12px 0 4px; font-weight: 600;">CIN : </label>
                <input type="number" id="cin" name="cin" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; background-color: #EDF2F4;" required>
            </div>
            <div style="text-align: center;">
                <button type="submit" style="width: 12rem; margin-top: 16px; background-color: #536DFE; color: #fff; font-weight: 600; padding: 12px; border-radius: 24px; cursor: pointer; outline: none; border: none;">
                    Mettre à jour
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
